{{> head}}
<section class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <h2>{{title}}</h2>  
      {{{html}}}
    </div>
  </div>
  <div class="row">
  {{#each contents.contributors._.pages}}
    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
      <div class="well well-lg">
        <img class="thumbnail" src="{{gravatar}}" />
        <h3>{{title}}</h3>
        <p>{{description}}</p>
        {{{twitter-follow metadata.twitter}}}{{{github-follow metadata.github}}}
      </div>
    </div>
  {{/each}}
  </div>
</section>
{{> footer}}