{{> head}}  
<div class="container">
  <article class="row">
    <aside class="col-xs-12 col-sm-12 col-md-3 col-md-push-9 col-lg-3 col-lg-push-9">
      <div class="list-group">
      {{#toc html}}
        <a href="{{url}}" class="list-group-item">{{title}}</a>
      {{/toc}}
      </div>
      {{#if tltr}}
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">TLTR</h3>
        </div>
        <div class="panel-body">
          {{{parse-markdown tltr}}}      
        </div>
      </div>
      {{/if}}
    </aside>  
    <div class="col-xs-12 col-sm-12 col-md-9 col-md-pull-3 col-lg-9 col-lg-pull-3">
      <div id="content">
        <header>
          <h1>{{title}}</h1>
          <p>{{description}}</p>
          <hr>
          </header>
        {{{toc-ize html}}}
      </div>
    </div>
  </article>
</div>
{{> footer}}